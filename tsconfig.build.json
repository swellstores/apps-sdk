{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["es2022", "dom"],
    "jsxImportSource": "react"
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "jest.config.js",
    "eslint.config.mjs",
    "src/**/*.test.ts"
  ]
}
